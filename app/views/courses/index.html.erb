<% if @courses.empty? %>
  <%= t('messages.no_course') %>
<% end%>

<% @courses.each do |course| %>
  <div>
    <p><%= link_to course.name, course %></p>
    <p><%= course.description %></p>
    <p><%= number_to_currency course.price %></p>
  </div>
<% end %>
  
<%= link_to t('links.back'), root_path %>
<%= link_to t('links.course_create'), new_course_path %>