<% if @courses.empty? %>
  <%= t('message.no_course_available') %>
<% end%>

<% @courses.each do |course| %>
  <%= link_to course.name, course %>
  <%= course.description %>
  <%= number_to_currency course.price %>
<% end %>
  
<%= link_to t('links.back'), root_path %>
<%= link_to t('links.course.register'), new_course_path %>