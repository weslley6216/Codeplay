<h1><%= @course.name %></h1>

<dl>
  <dt>Descrição</dt>
  <dd><%= @course.description %></dd>
  <dt>Código</dt>
  <dd><%= @course.code %></dd>
  <dt>Preço</dt>
  <dd><%= number_to_currency @course.price %></dd>
  <dt>Data limite de matrícula</dt>
  <dd><%= l(@course.enrollment_deadline) %></dd>
</dl>

<%= link_to 'Voltar', courses_path %>
<%= link_to 'Editar', edit_course_path(@course) %>
<%= link_to 'Apagar', @course, method: :delete, data: { confirm: 'Tem certeza? '} %>